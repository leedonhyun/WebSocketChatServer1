{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Redis": "localhost:6379",
    "MongoDB": "mongodb://user:password@localhost:27017/"
  },
  "MongoDB": {
    "DatabaseName": "WebSocketChatServer",
    "CommandLogsCollection": "command_logs",
    "SystemMetricsCollection": "system_metrics"
  },
  "FileStorage": {
    "Path": "uploads"
  }
}
